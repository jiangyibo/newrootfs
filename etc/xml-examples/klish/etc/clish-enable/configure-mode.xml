<?xml version="1.0" encoding="UTF-8"?>
<CLISH_MODULE xmlns="http://clish.sourceforge.net/XMLSchema" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
 xsi:schemaLocation="http://clish.sourceforge.net/XMLSchema
                     http://clish.sourceforge.net/XMLSchema/clish.xsd">
	<!--=======================================================-->

<VIEW name="configure-view"
	prompt="${SYSTEM_NAME}(config)# "
	restore="depth">

<!-- Inheritance -->

	<NAMESPACE ref="enable-view" 
		prefix="do"
		help="true"
		completion="true"/>

	<COMMAND name="do"
		help="To run exec commands in config mode"/>

<!-- Virtual commands -->

	<COMMAND name="no"
		help="Negate a command or set its defaults"/>

	<COMMAND name="ip"
		help="Global IP configuration subcommands"/>

	<COMMAND name="no ip"
		help="Global IP configuration subcommands"/>

<!-- Simple configuration mode commands -->

	<!--=======================================================-->
   <COMMAND name="reset"
            help="reset utility commands for time related details"/>
   <!--=======================================================-->	
    <COMMAND name="reset bload"
             help="Display the current session's command line history">
        <PARAM name="limit"
               help="reset bload"
              ptype="UINT"/>
        <ACTION builtin="clish_reset_bload">1 ${limit}</ACTION>
    </COMMAND>
   <!--=======================================================-->	
    <COMMAND name="adduser"
             help="add user for system">
        <PARAM name="limit"
               help="Set user name"
              ptype="STRING"/>
        <ACTION builtin="shell_add_user">${limit}</ACTION>
    </COMMAND>

    <COMMAND name="ip address"
             help="Set ip address">
        <PARAM name="addr"
               help="Set ip address"
              ptype="IP_ADDR"/>
        <ACTION builtin="shell_set_ipaddr">${addr}</ACTION>
    </COMMAND>

    <COMMAND name="ip gateway"
             help="Set ip gateway">
        <PARAM name="addr"
               help="Set ip gateway"
              ptype="IP_ADDR"/>
        <ACTION builtin="shell_set_gateway">${addr}</ACTION>
    </COMMAND>

   <!--=======================================================-->	
    <COMMAND name="deluser"
             help="delete user for system">
        <PARAM name="limit"
               help="user name"
              ptype="STRING"/>
        <ACTION builtin="shell_delete_user">${limit}</ACTION>
    </COMMAND>
   <!--=======================================================-->	
    <COMMAND name="changepass"
             help="change user password">
        <PARAM name="limit"
               help="current user password"
              ptype="STRING"/>
        <ACTION builtin="shell_delete_user">${limit}</ACTION>
    </COMMAND>
<!-- temp=======================================================-->	
	<COMMAND name="temperature"
		help="set alarm temperature"/>			

	<COMMAND name="temperature min"
		help="set min temperature alarm">
		<PARAM name="limit"
               help="min temperature alarm"
              ptype="UINT"/>
        <ACTION builtin="shell_system_set_temp">1 ${limit}</ACTION>
	</COMMAND>

	<COMMAND name="temperature max"
		help="set max temperature alarm">
		<PARAM name="limit"
               help="max temperature alarm"
              ptype="UINT"/>
        <ACTION builtin="shell_system_set_temp">2 ${limit}</ACTION>
	</COMMAND>

<!--=======================================================-->		

<!-- temp=======================================================-->	
	<COMMAND name="voltage"
		help="set alarm voltage"/>		

	<COMMAND name="voltage power1"
		help="set alarm voltage power1"/>			

	<COMMAND name="voltage power1 min"
		help="set min voltage power1 alarm">
		<PARAM name="limit"
               help="min voltage power1 alarm"
              ptype="UINT"/>
        <ACTION builtin="shell_system_set_temp">1 1 ${limit}</ACTION>
	</COMMAND>

	<COMMAND name="voltage power1 max"
		help="set max voltage power1 alarm">
		<PARAM name="limit"
               help="max voltage power1 alarm"
              ptype="UINT"/>
        <ACTION builtin="shell_system_set_temp">1 2 ${limit}</ACTION>
	</COMMAND>

	<COMMAND name="voltage power2"
		help="set voltage power2"/>			

	<COMMAND name="voltage power2 min"
		help="set min voltage power2 alarm">
		<PARAM name="limit"
               help="min voltage power2 alarm"
              ptype="UINT"/>
        <ACTION builtin="shell_system_set_temp">2 1 ${limit}</ACTION>
	</COMMAND>

	<COMMAND name="voltage power2 max"
		help="set max voltage power2 alarm">
		<PARAM name="limit"
               help="max voltage power2 alarm"
              ptype="UINT"/>
        <ACTION builtin="shell_system_set_temp">2 2 ${limit}</ACTION>
	</COMMAND>

<!--=======================================================-->		


    
<!-- buzz=======================================================-->	
	<COMMAND name="buzz"
		help="set buzz"/>			

	<COMMAND name="buzz on"
		help="set buzz on">
        <ACTION builtin="shell_system_set_buzz">1</ACTION>
	</COMMAND>

	<COMMAND name="buzz off"
		help="set buzz off">
        <ACTION builtin="shell_system_set_buzz">2</ACTION>
	</COMMAND>

	<COMMAND name="buzz clear"
		help="set buzz clear">
        <ACTION builtin="shell_system_set_buzz">3</ACTION>
	</COMMAND>
<!--=======================================================-->		

    <COMMAND name="snmp"
            help="set utility commands for time related details"/>
   <!--=======================================================-->	
    <COMMAND name="snmp comm"
             help="set snmp comminty string">
        <PARAM name="string"
               help="comminty string"
              ptype="STRING"/>
        <ACTION  builtin="shell_set_snmp_com">${string} </ACTION>
    </COMMAND>
	<!--=======================================================-->
	    <COMMAND name="snmp port"
             help="set snmp comminty string">
        <PARAM name="string"
               help="snmp port string"
              ptype="UINT"/>
        <ACTION  builtin="shell_set_snmp_com">${string} </ACTION>
    </COMMAND>
	<!--=======================================================-->
  <COMMAND name="snmp add trap"
             help="snmp trap">
            <PARAM name="ipaddr"
               help="set snmp trap ipaddr"
              ptype="STRING"/>   
            <PARAM name="comm"
               help="Set the size of history list (zero means unbounded)"
              ptype="STRING"/>   
            <PARAM name="port"
               help="Set the size of history list (zero means unbounded)"
              ptype="STRING"/>   
        <ACTION builtin="shell_set_snmp_trap">${ipaddr} ${comm} ${port}</ACTION>
    </COMMAND>
	<!--=======================================================-->	
  <COMMAND name="snmp delete trap"
             help="snmp set community">
            <PARAM name="ipaddr"
               help="set snmp community name"
              ptype="IP_ADDR"/>   

        <ACTION builtin="shell_set_snmp_trap">${ipaddr} </ACTION>
    </COMMAND>
	<!--=======================================================-->	

    
	<!--=======================================================-->
  <COMMAND name="reset cpu"
             help="reset cpu">
        <ACTION builtin="clish_reset_cpu"></ACTION>
    </COMMAND>
	<!--=======================================================-->	
	

	<COMMAND name="exit"
		help="Exit from configure mode"
		view="enable-view"
		lock="false">
	</COMMAND>

</VIEW>

</CLISH_MODULE>
