	<COMMAND name="show time"
		help="Show time">
		<ACTION>date</ACTION>
	</COMMAND>

	<COMMAND name="show snmp"
             help="Display snmp infomation">
        <ACTION  builtin="shell_show_snmp"></ACTION>
    </COMMAND>

   <!--=======================================================		
